{
  "include": [
    "src/**/*.ts", "src/app.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "strictPropertyInitialization": false,                             /* Skip type checking all .d.ts files. */
  }
}
